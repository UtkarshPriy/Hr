<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document Search - HR Covered</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <% if (typeof message !== 'undefined' && message.length > 0) { %>
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <%- message %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% } %>

    <header>
        <div class="logo-container">
            <img src="/logo-small.png" alt="HR Covered Logo" class="logo">
        </div>
        <h1>Document Search</h1>
        <a href="/logout" class="logout-link">Logout</a> <!-- Logout link in top right corner -->
    </header>
    
    <nav>
         <ul>
            <li><a href="/addEmployee">Add Employee</a></li>
            <li><a href="/updateEmployee">Update Employee</a></li>
            <li><a href="/uploadDoc">Upload Doc</a></li>
            <li><a href="/docStatus">Doc Status</a></li>
            <li><a href="/sendDoc">Send Docs</a></li>
        </ul>    
    </nav>

    <main class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>Search Documents</h3>
                    </div>
                    <div class="card-body">
                        <form action="/searchByDocName" method="GET" class="mb-3">
                            <div class="form-group">
                                <label for="docName">Document Name</label>
                                <input type="text" class="form-control" id="docName" name="docName" required>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Search by Document Name</button>
                        </form>
                        <form action="/searchByEmployee" method="GET">
                            <div class="form-group">
                                <label for="employeeEmail">Employee Email</label>
                                <input type="email" class="form-control" id="employeeEmail" name="email" required>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Search by Employee Email</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <% if (documents && documents.length > 0) { %>
            <div class="row justify-content-center mt-5">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header text-center">
                       
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Document Name</th>
                                        <th>Employee Email</th>
                                        <th>Status</th>
                                        <th>Download</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% documents.forEach(doc => { %>
                                        <tr>
                                            <td><%= doc.docName %></td>
                                            <td><%= doc.employee %></td>
                                            <td><%= doc.status %></td>
                                            <td>
                                                <form action="/downloadDocument" method="POST" class="d-inline">
                                                    <input type="hidden" name="Key" value="<%= doc.Key %>">
                                                    <button type="submit" class="btn btn-sm btn-primary">Download</button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        <% } else if (typeof documents !== 'undefined') { %>
            <div class="row justify-content-center mt-5">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header text-center">
                            <h3>No Documents Found</h3>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </main>

    <footer class="text-center mt-5">
        <p>&copy; 2024 HR Covered. All rights reserved.</p>
    </footer>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
