<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change User Status - HR Covered</title>
    <link rel="stylesheet" href="/style.css">
    <!-- Bootstrap CSS (Optional if you want to use Bootstrap for styling) -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <% if (typeof message !== 'undefined' && message.length > 0) { %>
        <div class="alert alert-info ">
            <%- message %>
        </div>
    <% } %>
    <header>
        <div class="logo-container">
            <img src="/logo-small.png" alt="HR Covered Logo" class="logo">
        </div>
        <h1>Welcome to HR Covered</h1>
        <p>Your one-stop solution for HR management.</p>
        <a href="/logout" class="logout-link">Logout</a> <!-- Logout link in top right corner -->
    </header>
  
    <nav>
        <ul>
            <li><a href="/addEmployee">Add Employee</a></li>
            <li><a href="/updateEmployee">Update Employee</a></li>
            <li><a href="/uploadDoc">Upload Doc</a></li>
            <li><a href="/createOrganization">Doc Status</a></li>

        </ul>
    </nav>

    <main class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>Change User Status</h3>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach(user => { %>
                                    <tr>
                                        <td><%= user.username %></td>
                                        <td><%= user.email %></td>
                                        <td>
                                            <form action="/changeStatusemployee" method="POST">
                                                <input type="hidden" name="email" value="<%= user.email %>"> <!-- Hidden input for user email -->
                                                <div class="form-group">
                                                    <select class="form-control" name="status">
                                                        <option value="active" <%= user.status === 'active' ? 'selected' : '' %>>Active</option>
                                                        <option value="inactive" <%= user.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                                                        <option value="suspended" <%= user.status === 'suspended' ? 'selected' : '' %>>Suspended</option>
                                                    </select>
                                                </div>
                                                <button type="submit" class="btn btn-primary">Change Status</button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer class="text-center mt-5">
        <p>&copy; 2024 HR Covered. All rights reserved.</p>
    </footer>

    <!-- Bootstrap JS and dependencies (Optional if you are using Bootstrap for styling) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
